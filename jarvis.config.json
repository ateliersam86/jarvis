{
    "i18n": {
        "enabled": true,
        "sourceLang": "fr",
        "targetLangs": [
            "en",
            "es",
            "de",
            "it",
            "pt",
            "ja",
            "zh"
        ],
        "messagesDir": "web/messages",
        "watchMode": "manual",
        "autoCommit": false,
        "translationModel": "gemini:flash",
        "validationLevel": "strict"
    },
    "orchestration": {
        "defaultModel": "gemini:flash",
        "fallbackChain": [
            "gemini",
            "claude",
            "codex"
        ],
        "swarmAgents": 4,
        "reflectAgents": 2,
        "timeout": 120
    }
}